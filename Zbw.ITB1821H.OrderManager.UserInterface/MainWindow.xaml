<mah:MetroWindow x:Class="ZbW.ITB1821H.OrderManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZbW.ITB1821H.OrderManager"
        xmlns:iconPacks="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Modern"
        mc:Ignorable="d"
        Title="Order manager" Height="450" Width="800" TitleBarHeight="30">
    <mah:MetroWindow.ContextMenu>
        <ContextMenu>
            <MenuItem Command="ApplicationCommands.New" />
            <MenuItem Command="ApplicationCommands.Delete" />
        </ContextMenu>
    </mah:MetroWindow.ContextMenu>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <TextBox mah:TextBoxHelper.ClearTextButton="True" mah:TextBoxHelper.Watermark="Search data" MinWidth="100" />
            <Button Click="Github_Click" ToolTip="Open GitHub page">
                <iconPacks:PackIconModern Width="22" Height="22" Kind="SocialGithubOctocat" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" x:Name="StatusBar" Height="30">
            <StatusBarItem DockPanel.Dock="Right" ToolTip="Zoom">
                <Slider x:Name="zoomSlider" Width="100" Value="{Binding SliderValue}" Minimum=".5" Maximum="2" Style="{DynamicResource MahApps.Styles.Slider.Flat}" />
            </StatusBarItem>
            <mah:ToggleSwitch Toggled="ToggleSwitch_Toggled" ToolTip="Turn dark mode on or off">
                <mah:ToggleSwitch.LayoutTransform>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
                </mah:ToggleSwitch.LayoutTransform>
            </mah:ToggleSwitch>
        </StatusBar>
        <Expander DockPanel.Dock="Left" ExpandDirection="Right" IsExpanded="True" Padding="2">
            <ListBox ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" DisplayMemberPath="FullName" Width="150" />
            <Expander.Header>
                <TextBlock Text="Customers" FontSize="12" Foreground="White">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="90" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>
        </Expander>
        <Expander DockPanel.Dock="Right" ExpandDirection="Left" IsExpanded="False" Padding="2">
            <ListBox ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder}" DisplayMemberPath="DateOfPurchase" Width="175" />
            <Expander.Header>
                <TextBlock Text="Latest orders" FontSize="12" Foreground="White">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="90" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>
        </Expander>
        <Grid>
            <Grid.LayoutTransform>
                <ScaleTransform ScaleX="{Binding ElementName=zoomSlider, Path=Value}" ScaleY="{Binding ElementName=zoomSlider, Path=Value}" />
            </Grid.LayoutTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="5px" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0" Width="Auto" ItemsSource="{Binding Customers}" SelectionMode="Single" SelectedItem="{Binding SelectedCustomer}" />
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" />
            <DataGrid Grid.Column="2" Width="Auto" ItemsSource="{Binding Orders}" SelectionMode="Single" SelectedItem="{Binding SelectedOrder}" />
        </Grid>
    </DockPanel>
</mah:MetroWindow>